<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="@color/black">

        <TextView
            android:id="@+id/tvExpression"
            style="@style/CalcDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:id="@+id/tvResult"
            style="@style/CalcResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow android:layout_width="match_parent">
                <Button android:id="@+id/btnClear" style="@style/CalcButtonOp" android:layout_width="0dp" android:layout_weight="1" android:text="C" />
                <Button android:id="@+id/btnDivide" style="@style/CalcButtonOp" android:layout_width="0dp" android:layout_weight="1" android:text="÷" />
                <Button android:id="@+id/btnMultiply" style="@style/CalcButtonOp" android:layout_width="0dp" android:layout_weight="1" android:text="×" />
                <Button android:id="@+id/btnDelete" style="@style/CalcButtonOp" android:layout_width="0dp" android:layout_weight="1" android:text="⌫" />
            </TableRow>
            <TableRow android:layout_width="match_parent">
                <Button android:id="@+id/btn7" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="7" />
                <Button android:id="@+id/btn8" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="8" />
                <Button android:id="@+id/btn9" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="9" />
                <Button android:id="@+id/btnMinus" style="@style/CalcButtonOp" android:layout_width="0dp" android:layout_weight="1" android:text="-" />
            </TableRow>
            <TableRow android:layout_width="match_parent">
                <Button android:id="@+id/btn4" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="4" />
                <Button android:id="@+id/btn5" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="5" />
                <Button android:id="@+id/btn6" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="6" />
                <Button android:id="@+id/btnPlus" style="@style/CalcButtonOp" android:layout_width="0dp" android:layout_weight="1" android:text="+" />
            </TableRow>
            <TableRow android:layout_width="match_parent">
                <Button android:id="@+id/btn1" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="1" />
                <Button android:id="@+id/btn2" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="2" />
                <Button android:id="@+id/btn3" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="3" />
                <Button android:id="@+id/btnEquals" style="@style/CalcButtonEq" android:layout_width="0dp" android:layout_weight="1" android:text="=" />
            </TableRow>
            <TableRow android:layout_width="match_parent">
                <Button android:id="@+id/btn0" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="2" android:text="0" />
                <Button android:id="@+id/btnDot" style="@style/CalcButton" android:layout_width="0dp" android:layout_weight="1" android:text="," />
                <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="0dp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"/>
</FrameLayout>
