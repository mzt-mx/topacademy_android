<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@color/black">

    <TextView
        android:id="@+id/tvExpression"
        style="@style/CalcDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0" />

    <TextView
        android:id="@+id/tvResult"
        style="@style/CalcResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <Button android:id="@+id/btnClear" android:text="C" style="@style/CalcButtonOp" />
            <Button android:id="@+id/btnDivide" android:text="÷" style="@style/CalcButtonOp" />
            <Button android:id="@+id/btnMultiply" android:text="×" style="@style/CalcButtonOp" />
            <Button android:id="@+id/btnDelete" android:text="⌫" style="@style/CalcButtonOp" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn7" android:text="7" style="@style/CalcButton" />
            <Button android:id="@+id/btn8" android:text="8" style="@style/CalcButton" />
            <Button android:id="@+id/btn9" android:text="9" style="@style/CalcButton" />
            <Button android:id="@+id/btnMinus" android:text="-" style="@style/CalcButtonOp" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn4" android:text="4" style="@style/CalcButton" />
            <Button android:id="@+id/btn5" android:text="5" style="@style/CalcButton" />
            <Button android:id="@+id/btn6" android:text="6" style="@style/CalcButton" />
            <Button android:id="@+id/btnPlus" android:text="+" style="@style/CalcButtonOp" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn1" android:text="1" style="@style/CalcButton" />
            <Button android:id="@+id/btn2" android:text="2" style="@style/CalcButton" />
            <Button android:id="@+id/btn3" android:text="3" style="@style/CalcButton" />
            <Button android:id="@+id/btnEquals" android:text="=" style="@style/CalcButtonEq" />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btn0" android:text="0" style="@style/CalcButton" android:layout_span="2" />
            <Button android:id="@+id/btnDot" android:text="," style="@style/CalcButton" />
            <View android:layout_width="0dp" android:layout_height="0dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>
