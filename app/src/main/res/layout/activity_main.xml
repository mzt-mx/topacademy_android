<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:title="@string/app_name"
                android:titleTextColor="@android:color/white"
                app:elevation="4dp"
                app:navigationIcon="@drawable/ic_arrow_back" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="?attr/actionBarSize"
            android:paddingBottom="0dp"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCurrentWeather"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp"
                    android:background="@android:color/white"
                    android:padding="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgCurrentWeatherIcon"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:contentDescription="@string/current_weather_icon"
                            android:src="@drawable/ic_sunny"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/tvCurrentTemp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/current_temp_sample"
                            android:textColor="#222222"
                            android:textSize="56sp"
                            android:textStyle="bold"
                            android:layout_marginStart="16dp"
                            app:layout_constraintTop_toTopOf="@id/imgCurrentWeatherIcon"
                            app:layout_constraintBottom_toBottomOf="@id/imgCurrentWeatherIcon"
                            app:layout_constraintStart_toEndOf="@id/imgCurrentWeatherIcon"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tvCurrentCondition"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/current_condition_sample"
                            android:textColor="#444444"
                            android:textSize="22sp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/imgCurrentWeatherIcon"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/current_location_sample"
                            android:textColor="#888888"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"
                            app:layout_constraintTop_toBottomOf="@id/tvCurrentCondition"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="start"
                            android:layout_marginTop="12dp"
                            app:layout_constraintTop_toBottomOf="@id/tvLocation"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <TextView
                                android:id="@+id/tvHumidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/humidity_sample"
                                android:textColor="#444444"
                                android:textSize="16sp"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:id="@+id/tvPressure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pressure_sample"
                                android:textColor="#444444"
                                android:textSize="16sp"
                                android:layout_marginEnd="16dp" />

                            <TextView
                                android:id="@+id/tvWindSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/wind_sample"
                                android:textColor="#444444"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvHourlyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/hourly_forecast"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/cardCurrentWeather"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHourly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:overScrollMode="never"
                    android:scrollbars="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tvHourlyTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvWeeklyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/weekly_forecast"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/rvHourly"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvWeekly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvWeeklyTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Удалена кнопка backButton, теперь только стрелка на тулбаре -->
</FrameLayout>
